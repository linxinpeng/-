body{
    background: rgb(249,250,254);
}
.content{
    width: 1200px;
    margin: 10px auto;
}
.content .c-header{
    text-align: left;
    width: 100%;
    height: 59px;
    background: #fff;
    margin-bottom: 15px;
    line-height: 59px;
    padding-left: 20px;
    font-size: 17px;
    color: #333333;
}
.content .c-header span{
    color: #4077ff;
}
.content .c-content{
    margin-bottom: 20px;
}
.content .c-content .c-left{
    float: left;
    width: 850px;
    min-height: 600px;
    background: #ffffff;
}
.content .c-content .c-right{
    float: right;
    width: 330px;
    background: #ffffff;
}
.r-top{
    /* display: flex; */
    padding: 20px;
}
.content .c-content .c-left{
    padding: 20px 43px;
    box-sizing: border-box;
}
.content .c-content .c-left h3{
    text-align: left;
    font-size: 20px;
    padding-left: 20px;
}
.content .c-content .c-left .time{
    text-align: left;
    padding-left: 20px;
    margin: 10px 0;
    color: #999999;
    font-size: 14px;
}
.content .c-content .c-left .title{
    text-align: left;
    padding-left: 20px;
    font-size: 18px;
    color: #333333;
    padding-bottom: 20px;
}

.content .c-content .c-left p{
    text-align: left;
    padding-left: 20px;
    font-size: 14px;
    color: #333333;
    margin: 10px 0;
    /* width: 90%; */
    line-height: 2;
    overflow: hidden;
}
.content .c-content .c-left p img{
    margin: 0 auto;
    display: block;
    max-width: 720px;
     
}
.content .c-content .c-left h4{
    text-align: left;
    padding-left: 20px;
    font-size: 16px;
    color: #333333;
}
.r-top .t-right h3{
    font-size: 15px;
    color: #333333;
    padding-bottom: 7px;
}
.r-top .t-right{
    text-align: left;
    padding-left: 10px;
}

.r-top .t-right p{
    font-size: 15px;
    color: #999999;
}
.r-top .t-right .t-b{
    margin-top: 20px;
}
.r-top .t-right .t-b img{
    margin: 0 5px;
}

.r-bottom{
    text-align: left;
    padding: 15px;
}
.r-bottom h3{
    font-size: 17px;
    color: #333333;
    padding: 11px 0;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ccc;
}
.r-bottom h3 img{
    margin-right: 8px;
}
.r-bottom .b-content .c-item{
    padding-bottom: 20px;
    border-bottom: 1px dashed #ccc;
}
.r-bottom .b-content .c-item:last-child{
    border-bottom: none;
}
.r-bottom .b-content .c-item h4{
    font-size: 15px;
    font-weight: 400;
    color: #333333;
    line-height: 1.8;
    margin: 5px 0;
    cursor: pointer;
}
