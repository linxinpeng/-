.r-bottom .b-content .c-item .i-desc{
    height: 40px;
    width: 80%;
    line-height: 20px;
    overflow: hidden;
}
.c-item .i-desc p{
    float: right;
    margin-left: -5px;
    width: 100%;
    word-break: break-all;
}
.c-item .i-desc::before {
    float: left;
    width: 5px;
    content: '';
    height: 40px;
}
.c-item .i-desc::after {
    float: right;
    content: "...";
    height: 20px;
    line-height: 20px;
    /* 为三个省略号的宽度 */
    width: 3em;
    /* 使盒子不占位置 */
    margin-left: -3em;
    /* 移动省略号位置 */
    position: relative;
    left: 100%;
    top: -20px;
    padding-right: 5px;
    background-color: #FFF;
}
.c-footer{
    margin-top: 10px;
    width: 850px;
    text-align: left;
    box-sizing: border-box;
}
.c-footer .f-left{
    float: left;
    width: 650px;
    display: flex;
    padding: 10px;
    background: #fff;
}
.c-footer .f-left .l-left{
    width: 450px;
}
.c-footer .f-left .l-left h3{
    font-size: 16px;
    padding-left: 10px;
    border-left: 2px solid;
    margin: 10px auto;
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.c-footer .f-left .l-left h4{
    font-size: 14px;
    font-weight: 400;
    color: #333333;
    margin: 10px auto;
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.c-footer .f-left .l-left p{
    font-size: 14px;
    color: #999999;
    width: 90%;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin: 10px auto;
    overflow: hidden;
}
.c-footer .f-left .l-right img{
    width: 200px;
}

.c-footer .f-right{
    float: right;
    width: 111px;
    margin-top: 40px;
    cursor: pointer;
}