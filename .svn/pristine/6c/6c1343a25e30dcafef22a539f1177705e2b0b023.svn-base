.fade-enter-active,
.fade-leave-active {
  transition: opacity .5s;
}
.fade-enter,
.fade-leave-to {
  opacity: 0;
}
.home {
  font-size: 30px;
}
.home .h-banner {
  position: relative;
  min-width: 1500px;
}
.home .h-banner .b-content {
  position: absolute;
  top: 120px;
  left: 150px;
  text-align: left;
  font-size: 40px;
  color: #ffffff;
}
.home .h-banner .b-content div {
  margin: 20px auto;
}
.home .h-banner .b-content .c-img {
  display: flex;
  align-items: center;
}
.home .h-banner .b-content .c-img img {
  margin-right: 10px;
}
.home .h-banner .b-content .c-bold {
  font-weight: bold;
  font-size: 50px;
}
.home .h-banner .b-content .c-radius {
  font-size: 20px;
  padding: 8px 10px;
  border-radius: 15px;
  border: 1px solid #fff;
}
.home .h-inner {
  width: 1200px;
  margin: 0 auto;
}
.home .h-inner .h-title {
  margin-top: 30px;
  margin-bottom: 20px;
}
.home .h-inner .h-title h3 {
  font-size: 30px;
  color: #333333;
  margin-bottom: 8px;
  font-weight: 400;
}
.home .h-inner .h-title p {
  font-size: 20px;
  color: #999999;
}
.home .h-inner .h-content h3 {
  padding-left: 20px;
  border-left: 2px solid #333;
  font-size: 24px;
  color: #333333;
  text-align: left;
  margin-top: 20px;
  font-weight: 400;
}
.home .h-inner .h-content ul li {
  float: left;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 130px;
  height: 130px;
  margin: 25px 40px;
  cursor: pointer;
  transition: all .3s;
}
.home .h-inner .h-content ul li:hover {
  box-shadow: 0 0 3px #ccc;
}
.home .h-inner .h-content ul li img {
  width: 48px;
  height: 43.33px;
}
.home .h-inner .h-content ul li span {
  padding-top: 8px;
  font-size: 16px;
  color: #666666;
  font-weight: 300;
}
.home .h-inner .h-down {
  margin-top: 60px;
  margin-bottom: 40px;
}
.home .h-inner .h-down h3 {
  font-size: 30px;
  color: #333333;
  font-weight: 400;
  padding-bottom: 20px;
}
.home .h-inner .h-down .d-btn img {
  margin: auto 15px;
  height: 45px;
}
.home .h-inner .h-img {
  position: relative;
}
.home .h-inner .h-img .i-more {
  position: absolute;
  bottom: 60px;
  left: 50%;
  transform: translateX(-50%);
}
.home .h-inner .h-img .i-more p {
  font-size: 26px;
  color: #5c687a;
  margin-top: 10px;
}


